<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JobFinishActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_layout_border2dp"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="330dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/ic_layout_underline">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="left|center"
                    android:paddingLeft="8dp"
                    android:textSize="20sp"
                    android:text="Report"
                    android:textAlignment="center"
                    android:id="@+id/descriptionTextView"/>

            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/reportTextInput"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text|textMultiLine"
                    android:gravity="left|top"
                    android:hint="Service report"
                    android:maxLength="300"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <!--//////////////////////////////////////////////////-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/ic_layout_border2dp"
            android:layout_marginHorizontal="18dp"
            android:layout_marginBottom="220dp"
            android:orientation="vertical"
            android:layout_gravity="bottom">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/ic_layout_underline">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="left|center"
                    android:paddingLeft="8dp"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:text="Job Status"/>


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                android:textSize="25sp"
                android:id="@+id/statusTextView"
                android:text="XXXXXX XXXXXXXXXX" />


        </LinearLayout>

        <!--//////////////////////////////////////////////////-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginBottom="80dp"
            android:layout_marginHorizontal="18dp"
            android:layout_gravity="bottom"
            android:background="@drawable/ic_layout_border2dp"
            android:orientation="vertical"
            android:id="@+id/ratingLinearLayout"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/ic_layout_underline"
                android:text="Rate User"
                android:gravity="center"
                android:textSize="20sp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="85dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/baseline_star_black_36dp"
                        android:layout_marginHorizontal="5dp"
                        android:id="@+id/star1"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/baseline_star_black_36dp"
                        android:layout_marginHorizontal="5dp"
                        android:id="@+id/star2"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/baseline_star_black_36dp"
                        android:layout_marginHorizontal="5dp"
                        android:id="@+id/star3"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/baseline_star_black_36dp"
                        android:layout_marginHorizontal="5dp"
                        android:id="@+id/star4"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/baseline_star_black_36dp"
                        android:layout_marginHorizontal="5dp"
                        android:id="@+id/star5"/>

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

        <!--//////////////////////////////////////////////////-->

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Report"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="18dp"
            android:layout_marginBottom="18dp"
            android:textSize="22dp"
            android:background="@drawable/rounded_button_corner"
            android:id="@+id/submitReportButton"/>

    </FrameLayout>

</android.support.constraint.ConstraintLayout>