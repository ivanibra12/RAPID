<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="302dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Response Details"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/colorPrimaryDark"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGreyButtons"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="210dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="8dp"
                        android:gravity="left|center"
                        android:textSize="15sp"
                        android:text="Professional ID : "
                        android:id="@+id/idText"/>

                    <TextView
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
                        android:gravity="left|center"
                        android:paddingRight="8dp"
                        android:paddingLeft="18dp"
                        android:textSize="15sp"
                        android:layout_toRightOf="@id/idText"
                        android:id="@+id/idTextView"
                        android:text="xx000xx"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="8dp"
                        android:gravity="left|center"
                        android:textSize="15sp"
                        android:text="Name : "
                        android:id="@+id/nameText"/>


                    <TextView
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
                        android:gravity="left|center"
                        android:paddingRight="8dp"
                        android:paddingLeft="18dp"
                        android:textSize="15sp"
                        android:layout_toRightOf="@id/nameText"
                        android:id="@+id/nameTextView"
                        android:text="xxxxx xxxx"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="8dp"
                        android:gravity="left|center"
                        android:textSize="15sp"
                        android:text="Mobile no : "
                        android:id="@+id/mobileNumberText"/>

                    <TextView
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
                        android:gravity="left|center"
                        android:paddingRight="8dp"
                        android:paddingLeft="18dp"
                        android:textSize="15sp"
                        android:layout_toRightOf="@id/mobileNumberText"
                        android:id="@+id/mobileNumberTextView"
                        android:text="000000000000"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="8dp"
                        android:gravity="left|center"
                        android:textSize="15sp"
                        android:text="Distance : "
                        android:id="@+id/distanceText"/>

                    <TextView
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
                        android:gravity="left|center"
                        android:paddingRight="8dp"
                        android:paddingLeft="18dp"
                        android:textSize="15sp"
                        android:layout_toRightOf="@id/distanceText"
                        android:id="@+id/distanceTextView"
                        android:text="xxxxx"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="8dp"
                        android:gravity="left|center"
                        android:textSize="15sp"
                        android:text="Rating : "
                        android:id="@+id/ratingText"/>

                    <TextView
                        android:layout_width="270dp"
                        android:layout_height="match_parent"
                        android:gravity="left|center"
                        android:paddingRight="8dp"
                        android:paddingLeft="18dp"
                        android:textSize="15sp"
                        android:layout_toRightOf="@id/ratingText"
                        android:id="@+id/ratingTextView"
                        android:text=""/>

                </RelativeLayout>


            </LinearLayout>

        </FrameLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGreyButtons"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:gravity="center"
            android:textSize="28sp"
            android:text="Decline"
            android:id="@+id/declineTextView"
            android:textColor="#ff0000"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:textSize="28sp"
            android:text="Accept"
            android:id="@+id/acceptTextView"
            android:textColor="#000000"/>

    </FrameLayout>


</LinearLayout>