<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestDetailsActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_layout_border2dp"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/ic_layout_underline">

                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="35dp"
                    android:gravity="left|center"
                    android:paddingLeft="8dp"
                    android:textSize="18sp"
                    android:text="User Details"
                    android:id="@+id/userDetailsTextView"/>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:id="@+id/firstnameTextView"
                    android:text="First name : "
                    android:paddingTop="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:id="@+id/lastnameTextView"
                    android:text="Last name : "/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:id="@+id/mobileNumberTextView"
                    android:text="Mobile number : " />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:id="@+id/distanceTextView"
                    android:text="Distance : "
                    android:paddingBottom="8dp"/>

            </LinearLayout>


        </LinearLayout>

        <!--//////////////////////////////////////////////////-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_layout_border2dp"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="144dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/ic_layout_underline">

                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="35dp"
                    android:gravity="left|center"
                    android:paddingLeft="8dp"
                    android:textSize="18sp"
                    android:text="Vehicle Details"
                    android:id="@+id/vehicleDetailsTextView"/>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:id="@+id/vehicleBrandTextView"
                    android:text="Brand : "
                    android:paddingTop="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:id="@+id/vehicleModelTextView"
                    android:text="Model : "/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:id="@+id/vehicleYearTextView"
                    android:text="Year : "/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:id="@+id/vehicleTypeTextView"
                    android:text="Type : "/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:id="@+id/vehicleRegnumTextView"
                    android:text="Registration number : "/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:id="@+id/vehicleInsurancenumTextView"
                    android:text="Insurance number : "
                    android:paddingBottom="8dp"/>

            </LinearLayout>


        </LinearLayout>

        <!--//////////////////////////////////////////////////-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/ic_layout_border2dp"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="315dp"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/ic_layout_underline">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center"
                    android:paddingLeft="8dp"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:text="Problem"/>


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:textSize="25sp"
                android:id="@+id/problemTextView"
                android:text="XXXXXX XXXXXXXXXX" />


        </LinearLayout>

        <!--//////////////////////////////////////////////////-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_layout_border2dp"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="395dp"
            android:layout_marginBottom="130dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/ic_layout_underline">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="left|center"
                    android:paddingLeft="8dp"
                    android:textSize="18sp"
                    android:text="Problem Description"
                    android:textAlignment="center"
                    android:id="@+id/descriptionTextView"/>

            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:id="@+id/problemDescriptionTextView"/>

            </ScrollView>
        </LinearLayout>

        <!--//////////////////////////////////////////////////-->

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="View User Location"
            android:textSize="25sp"
            android:background="@drawable/rounded_button_corner"
            android:id="@+id/viewLocationButton"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="70dp"
            android:layout_gravity="bottom"
            android:textAllCaps="false"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom">

            <Button
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:text="Accept Request"
                android:textSize="20sp"
                android:background="@drawable/rounded_button_corner"
                android:id="@+id/acceptButton"
                android:textAllCaps="false"
                android:backgroundTint="#77ff77"/>

            <Button
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:text="Decline Request"
                android:textSize="20sp"
                android:background="@drawable/rounded_button_corner"
                android:id="@+id/declineButton"
                android:textAllCaps="false"
                android:backgroundTint="#ff7777"
                android:layout_gravity="right"/>


        </FrameLayout>

    </FrameLayout>


</android.support.constraint.ConstraintLayout>