<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JobServiceDetailsActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="80dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="18dp"
                    android:id="@+id/currentRequestLayout"
                    android:orientation="vertical"
                    android:background="@drawable/ic_layout_border2dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="Request Details"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="22sp"
                        android:background="@drawable/ic_layout_underline"/>


                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="170dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="12dp"
                                android:id="@+id/requestIDTextView"
                                android:textSize="16sp"
                                android:gravity="left|center"
                                android:text="Request ID : rZZXXXZZXXXXXXZZZZZZXXXXXX"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_marginRight="12dp"
                                android:layout_marginLeft="12dp"
                                android:id="@+id/vehicleTextView"
                                android:textSize="16sp"
                                android:gravity="left|center"
                                android:text="Vehicle : XXXXXX (XXXXXX)"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_marginRight="12dp"
                                android:layout_marginLeft="12dp"
                                android:id="@+id/requestDateTextView"
                                android:textSize="16sp"
                                android:gravity="left|center"
                                android:text="Request Date : DD/MM/YYYY"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_marginRight="12dp"
                                android:layout_marginLeft="12dp"
                                android:id="@+id/requestTimeTextView"
                                android:textSize="16sp"
                                android:gravity="left|center"
                                android:text="Request Time : HH:MM:SS"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_marginRight="12dp"
                                android:layout_marginLeft="12dp"
                                android:id="@+id/problemTextView"
                                android:textSize="16sp"
                                android:gravity="left|center"
                                android:text="Problem : XXXXXXX XX XXXXXX"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginBottom="12dp"
                                android:id="@+id/problemDescTextView"
                                android:textSize="16sp"
                                android:gravity="left|center"
                                android:text="Additional note : XXXXXXX XX XXXXXX"/>


                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>

                <!--//////////////////////////////////////////////////-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_layout_border2dp"
                    android:layout_marginHorizontal="18dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_gravity="bottom">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@drawable/ic_layout_underline">

                        <TextView
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:layout_height="40dp"
                            android:gravity="left|center"
                            android:textSize="22sp"
                            android:textColor="#000000"
                            android:text="User Details"
                            android:id="@+id/userDetailsTextView"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:id="@+id/firstnameTextView"
                            android:text="First name : "
                            android:textSize="16sp"
                            android:paddingTop="8dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:id="@+id/lastnameTextView"
                            android:textSize="16sp"
                            android:text="Last name : "/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:textSize="16sp"
                            android:id="@+id/mobileNumberTextView"
                            android:text="Mobile number : "
                            android:paddingBottom="8dp"/>


                    </LinearLayout>


                </LinearLayout>

                <!--//////////////////////////////////////////////////-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_layout_border2dp"
                    android:layout_marginHorizontal="18dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_gravity="bottom">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/ic_layout_underline">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:gravity="left|center"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:text="Job Details"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Date created : "
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:textSize="16sp"
                            android:paddingTop="8dp"
                            android:id="@+id/jobDateTextView"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Time created : "
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:textSize="16sp"
                            android:id="@+id/jobTimeTextView"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Job status : "
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:textSize="16sp"
                            android:paddingBottom="8dp"
                            android:id="@+id/jobStatusTextView"/>


                    </LinearLayout>


                </LinearLayout>

                <!--//////////////////////////////////////////////////-->



            </LinearLayout>

        </ScrollView>

        <!--//////////////////////////////////////////////////-->

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report User"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="18dp"
            android:layout_marginBottom="18dp"
            android:textSize="22dp"
            android:visibility="visible"
            android:textColor="#ff0000"
            android:background="@drawable/rounded_button_corner"
            android:id="@+id/reportButton"/>

    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/sidebar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/nav_menu"
        app:headerLayout="@layout/sidebar_header"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>