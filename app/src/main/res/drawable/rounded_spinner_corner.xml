<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/lightGreyButtons"></solid>

                    <stroke
                        android:width="2dp"
                        android:color="@color/darkGreyButtons" />
                    <corners
                        android:radius="10dp" />
                    <padding
                        android:left="3dp"
                        android:top="3dp"
                        android:right="3dp"
                        android:bottom="3dp" />
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/baseline_arrow_drop_down_black_24dp"
                    android:gravity="center|right" />
            </item>
        </layer-list>
    </item>
</selector>